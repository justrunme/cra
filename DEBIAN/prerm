#!/bin/bash

SCRIPT_PATH="/usr/local/bin/update-all"

# ðŸ§¹ Ð£Ð´Ð°Ð»ÐµÐ½Ð¸Ðµ cron-Ð·Ð°Ð´Ð°Ñ‡Ð¸
if crontab -l 2>/dev/null | grep -q "$SCRIPT_PATH"; then
  TMP_CRON=$(mktemp)
  crontab -l 2>/dev/null | grep -v "$SCRIPT_PATH" > "$TMP_CRON"
  crontab "$TMP_CRON"
  rm "$TMP_CRON"
  echo "ðŸ§¹ Cron-Ð·Ð°Ð´Ð°Ñ‡Ð° ÑƒÐ´Ð°Ð»ÐµÐ½Ð°: $SCRIPT_PATH"
fi
