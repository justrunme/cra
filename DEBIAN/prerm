#!/bin/bash

SCRIPT_PATH="/usr/local/bin/update-all"

# –£–¥–∞–ª—è–µ–º cron-–∑–∞–¥–∞—á—É
TMP_CRON=$(mktemp)
crontab -l 2>/dev/null | grep -v "$SCRIPT_PATH" > "$TMP_CRON"
crontab "$TMP_CRON"
rm "$TMP_CRON"

# –£–¥–∞–ª—è–µ–º —Å–∏–º–≤–æ–ª—å–Ω—É—é —Å—Å—ã–ª–∫—É –Ω–∞ cra
rm -f /usr/local/bin/cra

echo "üßπ –£–¥–∞–ª–µ–Ω—ã cron-–∑–∞–¥–∞—á–∞ –∏ –∞–ª–∏–∞—Å cra"
