#!/bin/bash
set -e

# –¶–≤–µ—Ç–∞
GREEN="\e[32m"
YELLOW="\e[33m"
RED="\e[31m"
BLUE="\e[34m"
RESET="\e[0m"

CONFIG_FILE="$HOME/.create-repo.conf"
[ -f "$CONFIG_FILE" ] && source "$CONFIG_FILE"

mkdir -p ~/.create-repo/templates

# –§–ª–∞–≥–∏
show_help=false
show_version=false
show_status=false
show_log=false
run_update=false
run_clean=false
dry_run=false
show_list=false
remove_current=false
interactive=false
run_sync_now=false
log_lines=20

while [[ $# -gt 0 ]]; do
  case $1 in
    --status) show_status=true ; shift ;;
    --log) show_log=true; log_lines="${2:-20}"; shift 2 ;;
    --update|--self-update) run_update=true ; shift ;;
    --clean) run_clean=true ; shift ;;
    --dry-run) dry_run=true ; shift ;;
    --list) show_list=true ; shift ;;
    --remove) remove_current=true ; shift ;;
    --sync-now) run_sync_now=true ; shift ;;
    -h|--help) show_help=true ; shift ;;
    --version) show_version=true ; shift ;;
    *) repo=$1; shift ;;
  esac
done

REPO_LIST="$HOME/.repo-autosync.list"
LOG_FILE="$HOME/.create-repo.log"
SCRIPT_PATH="/usr/local/bin/update-all"
repo=${repo:-$(basename "$PWD")}
default_visibility=${default_visibility:-public}
default_cron_interval=${default_cron_interval:-1}

# --version
if $show_version; then
  VERSION=$(dpkg -s create-repo-auto 2>/dev/null | grep '^Version:' | awk '{print $2}')
  echo -e "create-repo version ${VERSION:-unknown}"
  exit 0
fi

# --help
if $show_help; then
  echo -e "${BLUE}üì¶ create-repo ‚Äî –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏ –∞–≤—Ç–æ-—Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è Git-–ø—Ä–æ–µ–∫—Ç–æ–≤${RESET}"
  echo ""
  echo "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: create-repo [–∏–º—è] [–æ–ø—Ü–∏–∏]"
  echo ""
  echo "–û–ø—Ü–∏–∏:"
  echo "  --status        –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç—É—Å cron –∏ –æ—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º—ã—Ö –ø—Ä–æ–µ–∫—Ç–æ–≤"
  echo "  --log [N]       –ü–æ–∫–∞–∑–∞—Ç—å –ø–æ—Å–ª–µ–¥–Ω–∏–µ N —Å—Ç—Ä–æ–∫ –∏–∑ –ª–æ–≥–∞"
  echo "  --clean         –û—á–∏—Å—Ç–∏—Ç—å –Ω–µ—Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ –ø—É—Ç–∏ –∏–∑ —Å–ø–∏—Å–∫–∞"
  echo "  --list          –ü–æ–∫–∞–∑–∞—Ç—å —Å–ø–∏—Å–æ–∫ –≤—Å–µ—Ö –æ—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º—ã—Ö –ø—É—Ç–µ–π"
  echo "  --remove        –£–¥–∞–ª–∏—Ç—å —Ç–µ–∫—É—â—É—é –ø–∞–ø–∫—É –∏–∑ –∞–≤—Ç–æ—Å–ª–µ–∂–µ–Ω–∏—è"
  echo "  --sync-now      –ù–µ–º–µ–¥–ª–µ–Ω–Ω–æ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä–æ–≤–∞—Ç—å –≤—Å–µ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–∏"
  echo "  --update        –û–±–Ω–æ–≤–∏—Ç—å –¥–æ –ø–æ—Å–ª–µ–¥–Ω–µ–π –≤–µ—Ä—Å–∏–∏ —Å GitHub"
  echo "  --dry-run       –¢–æ–ª—å–∫–æ –ø–æ–∫–∞–∑–∞—Ç—å –¥–µ–π—Å—Ç–≤–∏—è, –±–µ–∑ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è"
  echo "  --version       –ü–æ–∫–∞–∑–∞—Ç—å –≤–µ—Ä—Å–∏—é"
  echo "  -h, --help      –ü–æ–∫–∞–∑–∞—Ç—å —Å–ø—Ä–∞–≤–∫—É"
  exit 0
fi

# --remove
if $remove_current; then
  sed -i "\|$PWD|d" "$REPO_LIST" 2>/dev/null || true
  echo -e "${GREEN}üóëÔ∏è –£–¥–∞–ª–µ–Ω–æ –∏–∑ –∞–≤—Ç–æ—Å–ª–µ–∂–µ–Ω–∏—è: $PWD${RESET}"
  exit 0
fi

# --list
if $show_list; then
  echo -e "${BLUE}üìÉ –û—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º—ã–µ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–∏:${RESET}"
  n=1
  while IFS= read -r line; do
    last=$(grep "$line" "$LOG_FILE" 2>/dev/null | tail -n1 | cut -d "|" -f1)
    printf "%2d. %-50s %s\n" $n "$line" "${last:-‚Äî}"
    ((n++))
  done < "$REPO_LIST"
  exit 0
fi

# --status
if $show_status; then
  echo -e "${BLUE}üì¶ create-repo status${RESET}"
  echo "----------------------------"
  echo "üìÅ –¢–µ–∫—É—â–∏–π –ø—É—Ç—å: $PWD"
  echo "üìÑ –í—Å–µ–≥–æ –ø—Ä–æ–µ–∫—Ç–æ–≤: $(wc -l < "$REPO_LIST" 2>/dev/null)"
  echo "‚è±Ô∏è Cron –∑–∞–¥–∞—á–∞:"
  crontab -l 2>/dev/null | grep "$SCRIPT_PATH" || echo "üö´ –ù–µ –Ω–∞—Å—Ç—Ä–æ–µ–Ω–æ"
  echo "üìú –ü–æ—Å–ª–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å:"
  tail -n 1 "$LOG_FILE" 2>/dev/null || echo "–õ–æ–≥ –Ω–µ —Å–æ–∑–¥–∞–Ω"
  exit 0
fi

# --sync-now
if $run_sync_now; then
  /usr/local/bin/update-all
  exit 0
fi

# --clean
if $run_clean; then
  TMP=$(mktemp)
  echo -e "${YELLOW}üßπ –£–¥–∞–ª—è–µ–º –Ω–µ—Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ –ø—É—Ç–∏ –∏–∑ $REPO_LIST...${RESET}"
  while IFS= read -r path; do
    [ -d "$path" ] && echo "$path"
  done < "$REPO_LIST" > "$TMP"
  mv "$TMP" "$REPO_LIST"
  echo -e "${GREEN}‚úÖ –ì–æ—Ç–æ–≤–æ.${RESET}"
  exit 0
fi

# --update
if $run_update; then
  echo -e "${BLUE}‚¨áÔ∏è –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–æ –ø–æ—Å–ª–µ–¥–Ω–µ–π –≤–µ—Ä—Å–∏–∏...${RESET}"
  LATEST=$(curl -s https://api.github.com/repos/justrunme/cra/releases/latest \
    | grep browser_download_url | grep .deb | cut -d '"' -f 4)
  curl -LO "$LATEST"
  sudo dpkg -i create-repo-auto_*.deb
  echo -e "${GREEN}‚úÖ –û–±–Ω–æ–≤–ª–µ–Ω–æ${RESET}"
  exit 0
fi

# --dry-run
if $dry_run; then
  echo -e "${YELLOW}üß™ Dry-run: —Å–æ–∑–¥–∞–Ω–∏–µ –∏ –ø—É—à –Ω–µ –±—É–¥—É—Ç –≤—ã–ø–æ–ª–Ω–µ–Ω—ã${RESET}"
  echo "üìÅ –ü–∞–ø–∫–∞: $PWD"
  echo "üì¶ –†–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π: $repo"
  echo "‚è± –ò–Ω—Ç–µ—Ä–≤–∞–ª: $default_cron_interval –º–∏–Ω"
  exit 0
fi

# –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –ø–ª–∞—Ç—Ñ–æ—Ä–º—ã
if command -v gh &>/dev/null; then
  platform="github"
elif [ -n "$GITLAB_TOKEN" ]; then
  platform="gitlab"
elif [[ -n "$BITBUCKET_USERNAME" && -n "$BITBUCKET_APP_PASSWORD" ]]; then
  platform="bitbucket"
else
  echo -e "${RED}‚ùå –ù–µ –Ω–∞–π–¥–µ–Ω–∞ –ø–ª–∞—Ç—Ñ–æ—Ä–º–∞ –∫–æ–Ω—Ç—Ä–æ–ª—è –≤–µ—Ä—Å–∏–π${RESET}"
  echo -e "${YELLOW}üõ† –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ –æ–¥–Ω—É –∏–∑:${RESET}"
  echo "  üîπ GitHub: sudo apt install gh && gh auth login"
  echo "  üîπ GitLab: export GITLAB_TOKEN=..."
  echo "  üîπ Bitbucket: export BITBUCKET_USERNAME=... && export BITBUCKET_APP_PASSWORD=..."
  exit 1
fi

echo -e "${GREEN}‚úÖ –°–∏—Å—Ç–µ–º–∞ –∫–æ–Ω—Ç—Ä–æ–ª—è –≤–µ—Ä—Å–∏–π: $platform${RESET}"

# Git init
[ ! -d .git ] && git init && git checkout -b main || git checkout main 2>/dev/null || git checkout -b main
[ ! -f README.md ] && echo "# $repo" > README.md
[ ! -f .gitignore ] && echo ".DS_Store" > .gitignore

git add .
NOW=$(date "+%Y-%m-%d %H:%M:%S")
git commit -m "Initial commit at $NOW" 2>/dev/null || true

# –°–æ–∑–¥–∞–Ω–∏–µ —É–¥–∞–ª—ë–Ω–Ω–æ–≥–æ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏—è
if [[ "$platform" == "github" ]]; then
  user=$(gh api user --jq .login)
  remote_url="git@github.com:$user/$repo.git"
  gh repo view "$repo" > /dev/null 2>&1 || gh repo create "$repo" --$default_visibility --source=. --push
elif [[ "$platform" == "gitlab" ]]; then
  response=$(curl -s --header "PRIVATE-TOKEN: $GITLAB_TOKEN" \
    --data "name=$repo&visibility=$default_visibility" https://gitlab.com/api/v4/projects)
  remote_url=$(echo "$response" | grep -oP '"ssh_url_to_repo":"\K[^"]+')
elif [[ "$platform" == "bitbucket" ]]; then
  curl -s -u "$BITBUCKET_USERNAME:$BITBUCKET_APP_PASSWORD" \
    -X POST "https://api.bitbucket.org/2.0/repositories/$BITBUCKET_USERNAME/$repo" \
    -H "Content-Type: application/json" \
    -d "{\"scm\": \"git\", \"is_private\": $( [[ "$default_visibility" == "private" ]] && echo true || echo false ) }"
  remote_url="git@bitbucket.org:$BITBUCKET_USERNAME/$repo.git"
fi

git remote get-url origin &>/dev/null || git remote add origin "$remote_url"
git push -u origin main || true

# –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –≤ —Å–ø–∏—Å–æ–∫
grep -qxF "$PWD" "$REPO_LIST" 2>/dev/null || echo "$PWD" >> "$REPO_LIST"

# –î–æ–±–∞–≤–ª–µ–Ω–∏–µ cron
TMP_CRON=$(mktemp)
crontab -l 2>/dev/null | grep -v "$SCRIPT_PATH" > "$TMP_CRON"
echo "*/$default_cron_interval * * * * $SCRIPT_PATH # auto-sync by create-repo" >> "$TMP_CRON"
sort -u "$TMP_CRON" -o "$TMP_CRON"
crontab "$TMP_CRON"
rm "$TMP_CRON"

# Telegram Notify
if [[ -n "$TELEGRAM_BOT_TOKEN" && -n "$TELEGRAM_CHAT_ID" ]]; then
  curl -s -X POST "https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage" \
    -d chat_id="$TELEGRAM_CHAT_ID" \
    -d text="‚úÖ create-repo: '$repo' —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä–æ–≤–∞–Ω —Å $platform"
fi

# –§–∏–Ω–∞–ª
echo ""
echo -e "${GREEN}üéâ –†–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π '$repo' —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä–æ–≤–∞–Ω —Å $platform${RESET}"
echo "üìÅ –ü—É—Ç—å: $PWD"
echo "üìù –û—Ç—Å–ª–µ–∂–∏–≤–∞–µ—Ç—Å—è: $REPO_LIST"
echo "‚è±Ô∏è Cron: –∫–∞–∂–¥—ã–µ $default_cron_interval –º–∏–Ω"
echo "‚ÑπÔ∏è –ò–∑–º–µ–Ω–∏—Ç—å –∏–Ω—Ç–µ—Ä–≤–∞–ª: nano ~/.create-repo.conf (default_cron_interval)"
