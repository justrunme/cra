#!/bin/bash
set -e

# === Metadata ===
VERSION="1.2.49"
INSTALLER_URL="https://raw.githubusercontent.com/justrunme/cra/main/install-create-repo.sh"

# === Colors ===
GREEN="\e[32m"
YELLOW="\e[33m"
RED="\e[31m"
BLUE="\e[34m"
RESET="\e[0m"

# === Paths ===
CONFIG_FILE="$HOME/.create-repo.conf"
PLATFORM_MAP="$HOME/.create-repo.platforms"
REPO_LIST="$HOME/.repo-autosync.list"
LOG_FILE="$HOME/.create-repo.log"
ERROR_LOG="$HOME/.create-repo-errors.log"
LOCAL_CONFIG_FILE=".create-repo.local.conf"
NOW=$(date "+%Y-%m-%d %H:%M:%S")

# === Flags ===
repo=""
platform_flag=""
show_help=false
show_platform_status=false
interactive=false
self_update=false

# === Parse args ===
while [[ $# -gt 0 ]]; do
  case $1 in
    --help|-h) show_help=true ; shift ;;
    --interactive) interactive=true ; shift ;;
    --update|--self-update) self_update=true ; shift ;;
    --version) echo "$VERSION"; exit 0 ;;
    --platform=*) platform_flag="${1#*=}" ; shift ;;
    --platform-status) show_platform_status=true ; shift ;;
    *) repo=$1 ; shift ;;
  esac
done

# === Show help ===
if $show_help; then
  echo -e "${BLUE}ğŸ“¦ create-repo â€” DevOps CLI tool (v$VERSION)${RESET}"
  echo "Usage: create-repo [repo-name] [--platform=github|gitlab|bitbucket] [--interactive]"
  echo "Other flags:"
  echo "  --platform-status   Show saved platform bindings"
  echo "  --update            Update CLI to latest version"
  echo "  --version           Show installed version"
  exit 0
fi

# === Platform status view ===
if $show_platform_status; then
  echo -e "${BLUE}ğŸ“¦ Folder-to-platform bindings:${RESET}"
  [ -f "$PLATFORM_MAP" ] && cat "$PLATFORM_MAP" || echo "No bindings found."
  exit 0
fi

# === Update logic ===
if $self_update; then
  echo -e "${BLUE}â¬†ï¸ Checking for updates...${RESET}"
  current_version="$VERSION"
  latest_version=$(curl -s https://api.github.com/repos/justrunme/cra/releases/latest \
    | grep '"tag_name":' | cut -d '"' -f4 | sed 's/^v//')

  echo -e "ğŸ”¢ Installed: ${YELLOW}${current_version}${RESET}"
  echo -e "ğŸŒ Latest:    ${GREEN}${latest_version}${RESET}"

  if [[ "$latest_version" == "$current_version" ]]; then
    echo -e "${GREEN}âœ… You already have the latest version.${RESET}"
    exit 0
  fi

  echo -e "${BLUE}ğŸ“¥ Downloading installer...${RESET}"
  tmp_script=$(mktemp)
  curl -fsSL "$INSTALLER_URL" -o "$tmp_script"
  chmod +x "$tmp_script"
  sudo bash "$tmp_script"
  echo -e "${GREEN}âœ… Updated to v$latest_version!${RESET}"
  exit 0
fi

# === Current folder ===
CURRENT_FOLDER=$(realpath "$PWD")

# === Load config (local overrides global) ===
if [[ -f "$LOCAL_CONFIG_FILE" ]]; then
  source "$LOCAL_CONFIG_FILE"
elif [[ -f "$CONFIG_FILE" ]]; then
  source "$CONFIG_FILE"
fi

# === Interactive setup ===
if $interactive || [ ! -f "$CONFIG_FILE" ]; then
  echo -e "${BLUE}âœ¨ Interactive setup (first run or --interactive)...${RESET}"
  echo -ne "${YELLOW}ğŸ“¦ Repo name [$(basename "$PWD")]: ${RESET}"
  read input_repo
  repo=${input_repo:-$(basename "$PWD")}

  echo -ne "${YELLOW}ğŸ” Visibility (public/private) [public]: ${RESET}"
  read input_visibility
  default_visibility=${input_visibility:-public}

  echo -ne "${YELLOW}ğŸ‘¥ GitHub team (optional): ${RESET}"
  read input_team
  default_team=$input_team

  echo -ne "${YELLOW}â± Sync interval (minutes) [1]: ${RESET}"
  read input_interval
  default_cron_interval=${input_interval:-1}

  echo -ne "${YELLOW}ğŸŒ¿ Default branch (main/master) [main]: ${RESET}"
  read input_branch
  default_branch=${input_branch:-main}

  echo -ne "${YELLOW}ğŸ’¾ Save config globally or locally? [global/local]: ${RESET}"
  read input_scope

  if [[ "$input_scope" == "local" ]]; then
    cat > "$LOCAL_CONFIG_FILE" <<EOF
default_visibility=$default_visibility
default_cron_interval=$default_cron_interval
default_team=$default_team
default_branch=$default_branch
EOF
    echo -e "${GREEN}âœ… Local config saved: $LOCAL_CONFIG_FILE${RESET}"
  else
    cat > "$CONFIG_FILE" <<EOF
default_visibility=$default_visibility
default_cron_interval=$default_cron_interval
default_team=$default_team
default_branch=$default_branch
EOF
    echo -e "${GREEN}âœ… Global config saved: $CONFIG_FILE${RESET}"
  fi
fi

# === Determine platform ===
if [[ -n "$platform_flag" ]]; then
  platform="$platform_flag"
  echo "$CURRENT_FOLDER=$platform" >> "$PLATFORM_MAP"
elif [[ -f "$PLATFORM_MAP" ]]; then
  platform=$(grep "^$CURRENT_FOLDER=" "$PLATFORM_MAP" | cut -d= -f2)
fi

if [[ -z "$platform" ]]; then
  available=()
  [[ -x "$(command -v gh)" ]] && gh auth status &>/dev/null && available+=("github")
  [[ -n "$GITLAB_TOKEN" ]] && available+=("gitlab")
  [[ -n "$BITBUCKET_USERNAME" && -n "$BITBUCKET_APP_PASSWORD" ]] && available+=("bitbucket")

  if [[ ${#available[@]} -eq 1 ]]; then
    platform="${available[0]}"
  elif [[ ${#available[@]} -gt 1 ]]; then
    echo -e "${YELLOW}âš ï¸ Multiple platforms detected: ${available[*]}${RESET}"
    echo -ne "${YELLOW}â“ Choose platform for this folder [github/gitlab/bitbucket]: ${RESET}"
    read chosen
    platform="$chosen"
    echo "$CURRENT_FOLDER=$platform" >> "$PLATFORM_MAP"
    echo -e "${GREEN}ğŸ“ Folder bound to $platform${RESET}"
  fi
fi

if [[ -z "$platform" ]]; then
  echo -e "${RED}âŒ No supported Git platform detected.${RESET}"
  exit 1
fi

# === Final values ===
repo=${repo:-$(basename "$PWD")}
branch=${default_branch:-main}

echo -e "${GREEN}ğŸ“¦ Initializing '$repo' on $platform (branch: $branch)...${RESET}"

# === Git setup ===
git init &>/dev/null
git checkout -b "$branch" &>/dev/null || git checkout "$branch"

[ ! -f README.md ] && echo "# $repo" > README.md
[ ! -f .gitignore ] && echo ".DS_Store" > .gitignore

git add .
git commit -m "Initial commit at $NOW" &>/dev/null || true

# === Remote create ===
if [[ "$platform" == "github" ]]; then
  user=$(gh api user --jq .login)
  remote_url="git@github.com:$user/$repo.git"
  gh repo view "$repo" &>/dev/null || gh repo create "$repo" --$default_visibility --source=. --push
elif [[ "$platform" == "gitlab" ]]; then
  response=$(curl -s --header "PRIVATE-TOKEN: $GITLAB_TOKEN" \
    --data "name=$repo&visibility=$default_visibility" https://gitlab.com/api/v4/projects)
  remote_url=$(echo "$response" | grep -oP '"ssh_url_to_repo":"\K[^"]+')
elif [[ "$platform" == "bitbucket" ]]; then
  curl -s -u "$BITBUCKET_USERNAME:$BITBUCKET_APP_PASSWORD" \
    -X POST "https://api.bitbucket.org/2.0/repositories/$BITBUCKET_USERNAME/$repo" \
    -H "Content-Type: application/json" \
    -d "{\"scm\": \"git\", \"is_private\": $( [[ "$default_visibility" == "private" ]] && echo true || echo false ) }"
  remote_url="git@bitbucket.org:$BITBUCKET_USERNAME/$repo.git"
fi

# === Push & track ===
git remote add origin "$remote_url" 2>/dev/null || true
git push -u origin "$branch" &>/dev/null || true

grep -qxF "$PWD" "$REPO_LIST" || echo "$PWD" >> "$REPO_LIST"
echo "$NOW | $PWD | synced to $platform on branch $branch" >> "$LOG_FILE"

echo ""
echo -e "${GREEN}ğŸ‰ Repo '$repo' initialized and pushed to $platform!${RESET}"
echo "ğŸŒ¿ Branch: $branch"
echo "ğŸ“ Folder: $PWD"
echo "ğŸ“ Tracked in: $REPO_LIST"
echo "âš™ï¸ Platform: $platform"
